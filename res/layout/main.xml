<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/llMain"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
	android:layout_gravity="center_horizontal"
    android:gravity="top"
    android:orientation="vertical" >
	<Button android:id="@+id/btnWake_Disabled"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:textSize="20pt"
		android:text="Disabled"
		android:enabled="false"
		android:onClick="Wake_onClick" />
	<Button android:id="@+id/btnWake_Partial"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:textSize="20pt"
		android:text="Partial"
		android:onClick="Wake_onClick" />
	<Button android:id="@+id/btnWake_ScreenDim"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:textSize="20pt"
		android:text="Screen Dim"
		android:onClick="Wake_onClick" />
	<!-- following button has longest text -->
	<Button android:id="@+id/btnWake_ScreenBright"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:textSize="20pt"
		android:text="Screen Bright"
		android:paddingLeft="10pt"
		android:paddingRight="10pt"
		android:onClick="Wake_onClick" />
	<Button android:id="@+id/btnWake_Full"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:textSize="20pt"
		android:text="Full"
		android:onClick="Wake_onClick" />
</LinearLayout>
